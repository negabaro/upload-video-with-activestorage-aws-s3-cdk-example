<% if @video.video.attached? %>
  <p>
    <strong>Title:</strong>
    <%= @video.title %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @video.content %>
  </p>
  <video src="<%= rails_blob_path(@video.video) %>" type="video/mp4" controls></video>
